.page-header 
  %h1 Biblio
  =image_tag "/images/library2.jpg"

.navbar
  .navbar-inner
    %a.brand{:href => "#"} Books For DAIZ
    %ul.nav
      %li.active 
        %a{:href => "#"} Home
      %li 
        %a{:href => "#"} Link
      %li 
        %a{:href => "#"} Link
    
%h3= "#{current_user.first_name}'s Collection"

=  link_to 'New Book', new_book_path

%table.table-striped.table-hover
  %tr
    %th Title
    %th Author
    %th ISBN
    %br

  - @books.each do |book| 
    %tr
      %td= book.title 
      %td= book.author 
      %td= book.isbn 
      %td= link_to 'Show', book 
      %td=  link_to 'Edit', edit_book_path(book.id) 
      %td=  link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?' } 

